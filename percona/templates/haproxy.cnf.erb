global
        log 127.0.0.1   local0
        log 127.0.0.1   local1 notice
        maxconn 4096
        uid 99
        gid 99
        daemon
        #debug
        #quiet

defaults
        log     global
        mode    http
        option  tcplog
        option  dontlognull
        retries 3
        redispatch
        maxconn 2000
        contimeout      5000
        clitimeout      50000
        srvtimeout      50000

listen galera_cluster 0.0.0.0:3306
    mode tcp
    balance roundrobin
    option mysql-check user root

    server cluster1.percona.com 192.168.2.11:3306 check
    server cluster2.percona.com 192.168.2.8:3306 check
    server cluster3.percona.com 192.168.2.10:3306 check

